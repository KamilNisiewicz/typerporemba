{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>

    {% if app.user.active %}
	{% if app.session.flashbag.peek('error') %}
	    {% for message in app.flashes('error') %}
		<p>{{ message|raw }}</p>
	    {% endfor %}
	{% endif %}
	{% if app.session.flashbag.peek('success') %}
	    {% for message in app.flashes('success') %}
		<p>{{ message|raw }}</p>
	    {% endfor %}
	{% endif %}
	Zmiana hasła:
	<form method="post" action="{{ path('user_change_password') }}">
	    <label for="">Hasło</label>
	    <input type="password" value="" name="password1" id="password1" class="form-control">

	    <label for="">Powtórz hasło</label>
	    <input type="password" value="" name="password2" id="password2" class="form-control">
	
	    <button class="btn btn-lg btn-primary" type="submit">
		Zmień hasło
	    </button>
	</form>
    {% else %}
	Twoje konto nie jest jeszcze aktywne!
    {% endif %}
</div>
{% endblock %}
