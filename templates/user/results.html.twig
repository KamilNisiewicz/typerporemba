{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1>Hello {{ app.user.login }}</h1>
    {% for result in results %}
	<div style="display:flex;">
	    <div style="padding:2px 5px;">{{ loop.index }}</div>
	    <div style="padding:2px 5px;">{{ result.login }}</div>
	    <div style="padding:2px 5px;">{{ result.points }}</div>
	    <div style="padding:2px 5px;">
		<a href="{{ path('user_results_details', { 'id': result.id }) }}">Zobacz szczegóły &raquo;</a>
	    </div>
	</div>
    {% endfor %}
</div>
{% endblock %}
