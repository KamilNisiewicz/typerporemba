{% extends 'base.html.twig' %}

{% block meta_title %}Twoje konto
{% endblock %}

{% block content %}
	<h2 class="site-title">
		Twoje konto -
		<span class="color-gold">{{ app.user.login }}</span>
	</h2>
	{% if app.user.active %}
		<div class="user-info-special">
			Aby uniknąć niesprawiedliwego podziału nagród - wprowadziliśmy zmiany w regulaminie odnośnie podziału nagród w przypadku zajęcia miejsc ex-aequo.<br/>
			Prosimy o wyrozumiałość, a w przypadku potrzeby konkretniejszych wyjaśnień prosimy o kontakt z administratorami.<br/>
			<a href="{{ path('regulations') }}#changes" class="hover">Zobacz zmiany &raquo;</a>
		</div>
		<div class="user-tiles {% if is_granted('ROLE_ADMIN') %}user-tiles-admin{% endif %}">
			{% if is_granted('ROLE_ADMIN') %}
				<a href="{{ path('admin') }}" class="tile tile-admin">
					<i class="fas fa-user-shield"></i>
					<strong>Admin</strong>
				</a>
			{% endif %}
			<a href="{{ path('user_bets') }}" class="tile">
				<i class="fas fa-check"></i>
				<strong>Twoje typy</strong>
			</a>
			<a href="{{ path('user_results') }}" class="tile">
				<i class="fas fa-table"></i>
				<strong>Tabela</strong>
			</a>
			<a href="{{ path('user_settings') }}" class="tile">
				<i class="far fa-user"></i>
				<strong>Twoje dane</strong>
			</a>
		</div>
	{% else %}
		{{ include('_partials/user_inactive_info.twig') }}
	{% endif %}
{% endblock %}
